.chat-main__messge-list__box
  .chat-main__messge-list__box__file
    .chat-main__message-list__box__file__name
      = message.user.name
    .chat-main__message-list__box__file__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__box__comment
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?